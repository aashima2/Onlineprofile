<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="wrap_content"
    tools:context=".Usersprofile">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/Adddetails"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:text="+ ADD NEW EDUCATION DETAIL "
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <ListView
        android:layout_marginTop="20dp"
        android:layout_below="@id/Adddetails"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="250dp">

    </ListView>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/listview"
        android:id="@+id/addEmpdetails"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="27dp"
        android:text="+ ADD NEW  EMPLOYMENT HISTORY"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <ListView

        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_below="@id/addEmpdetails"
        android:layout_height="250dp">

    </ListView>
<TextView
    android:layout_marginTop="10dp"
    android:id="@+id/AddSkills"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginLeft="27dp"
    android:layout_below="@id/listview1"
    android:text="+ ADD NEW SKILLS"
    android:textColor="@color/colorPrimary"
    android:textSize="15dp"
    />



    <ListView
        android:id="@+id/listview2"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/AddSkills">

    </ListView>


</RelativeLayout>